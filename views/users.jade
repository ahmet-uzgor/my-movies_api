extends layout

block content
  h1= message
  p Welcome to Ahmet's My-Movie-Api

  .login
    h1 Please Enter username & password
    form#login(method='post', action='users/register')
      .username
        label Username:
        br
        input#username(name='username')
        br
      .password
        label Password:
        input#password(name='password')
        br
        button(type='submit') Register
        p
        br
